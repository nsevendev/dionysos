{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next",
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": ["error"], // Traite les erreurs Prettier comme des erreurs ESLint
    "@typescript-eslint/explicit-module-boundary-types": "off" // Désactiver les types explicites pour les frontières de module
    // Ajouter d'autres règles spécifiques au besoin
  }
}
